<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="settlementAction" class="com.kintiger.mall.settlement.action.SettlementAction" parent="baseAction" scope="request">
		<property name="settlementService" ref="settlementService" />
	</bean>
	
	<bean id="settlementService" class="com.kintiger.mall.settlement.service.impl.SettlementServiceImpl">
		<property name="settlementDao" ref="settlementDao" />
	</bean>

	<bean id="settlementDao" class="com.kintiger.mall.settlement.dao.impl.SettlementDaoImpl" parent="baseDao" />
	
</beans>