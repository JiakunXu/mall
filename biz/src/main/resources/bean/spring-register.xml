<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- 注册管理 -->
	<bean id="registerAction" class="com.kintiger.mall.register.action.RegisterAction" parent="baseAction" scope="request">
		<property name="registerService" ref="registerService" />
	</bean>
	<bean id="registerService" class="com.kintiger.mall.register.service.impl.RegisterServiceImpl">
		<property name="transactionTemplate" ref="transactionTemplate" />
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="userService" ref="userService" />
		<property name="memberService" ref="memberService" />
		<property name="memberPointsService" ref="memberPointsService" />
	</bean>
	
	<!-- 客户端 注册管理 -->
	<bean id="mobileRegisterAction" class="com.kintiger.mall.register.action.MobileRegisterAction" parent="baseAction" scope="request">
		<property name="registerService" ref="registerService" />
	</bean>
	
</beans>